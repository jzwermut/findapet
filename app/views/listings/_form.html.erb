<%= form_for @listing do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :class => 'form-control'  %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, :class => 'form-control'  %>
  </div>
  <div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price, :class => 'form-control'  %>
  </div>
  <div class="form-group">
  <%= f.label :availability %>
  <%= f.text_field :availability, :placeholder => 'NSW', :class => 'form-control'  %>
  </div>
  <div class="form-group">
  <%= f.label :image %>
  <%= f.url_field :image, :class => 'form-control'  %>
  </div>
  <div class="form-group">
  <%= f.label :breeder_id %>
  <%= f.collection_select :breeder_id, @myBreeders.order(:name), :id, :name, :include_blank => true, :class => 'form-control'  %>
  </div>
  <%= f.label :breed_id %>
  <%= f.grouped_collection_select :breed_id, @myBreeders.order(:name), :breeds, :name, :id, :name, :include_blank => true, :class => 'form-control'%>
  </div>
  <%= f.submit %>
<% end %>