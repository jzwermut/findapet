<%= form_for @breed do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :class => 'form-control' %>
  </div>
  <div class="form-group"> 
  <%= f.label :origin %>
  <%= f.text_field :origin, :class => 'form-control' %>
  </div>
  <div class="form-group">
  <%= f.label :photo %>
  <%= f.url_field :photo, :class => 'form-control' %>
  </div>
  <%= f.submit %>
<% end %>