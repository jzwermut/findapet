<div class="container">
  <%= form_for @breed do |f| %>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :class => 'form-control' %>
    </div>
    <div class="form-group"> 
    <%= f.label :origin %>
    <%= f.text_field :origin, :class => 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.label :photo %>
    <%= f.url_field :photo, :class => 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <div class="form-group">
    <%= f.label :breeder_id %>
    <%= f.collection_select :breeder_ids, @myBreeders.order(:name), :id, :name, :include_blank => true, :class => 'form-control'  %>
    </div>
    <%= f.submit :class => "btn btn-primary"%>
  <% end %>
</div>